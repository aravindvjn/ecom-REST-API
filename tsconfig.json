{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,                   
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                    
    "resolveJsonModule": true,              
    "noImplicitAny": true,                  
    "strictNullChecks": true,               
    "strictFunctionTypes": true,            
    "strictPropertyInitialization": true,  
    "allowJs": true,                        
    "baseUrl": "./",                        
  }   
}
